@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_darkOn" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="5">
        <MudText>Buccaneer's Weather Watch</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="_darkOn"
                             Icon="@Icons.Material.Filled.DarkMode"
                             Color="@Color.Inherit"
                             Title="Off"
                             ToggledIcon="@Icons.Material.Filled.LightMode"
                             ToggledColor="@Color.Inherit"
                             ToggledTitle="On" />

        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/abflett/BuccaneersWeatherWatch" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _darkOn = true;
}